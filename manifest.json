{
    "manifest_version": 3,
    "name": "Unibuddy Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome extension with React frontend and Express backend.",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "identity",
      "scripting",
      "storage"
    ],
    "oauth2" : {
      "client_id": "629353896044-9nho2h64sddc767f860v37kk2p1pacs1.apps.googleusercontent.com",
      "scopes": ["openid", "email", "profile"]
    },
    "action": {
      "default_title": "Unibuddy 열기"
    },
    "content_scripts": [
      {
        "js": [
          "scripts/content.js",
          "scripts/clipper.js"
        ],
        "matches": ["<all_urls>"],
        "run_at": "document_idle"
      }
    ],
    "host_permissions": [
      "http://localhost:4000/*",
      "https://unibuddygame.duckdns.org:8443/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "client/build/index.html",
          "client/build/static/js/*",
          "client/build/static/css/*",
          "client/build/static/media/*"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://unibuddygame.duckdns.org:8443; frame-src https://unibuddygame.duckdns.org:8443"
  }
  }
