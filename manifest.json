{
    "manifest_version": 3,
    "name": "Unibuddy Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome extension with React frontend and Express backend.",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "scripting",
      "tabs",
      "identity",
      "storage"
    ],
    "host_permissions": [
      "http://localhost:3001/*"
    ],
    "oauth2": {
      "client_id": "886209543233-a5v1n6s0a3p23j7i56j3a2h3j3j3j3j3.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile"
      ]
    },
    "action": {
      "default_title": "Unibuddy 열기"
    },
    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "client/build/index.html",
          "client/build/static/js/*",
          "client/build/static/css/*",
          "client/build/static/media/*"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  